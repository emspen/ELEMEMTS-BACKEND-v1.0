{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/tests/*": ["tests/*"],
      "@/prisma/*": ["prisma/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx", "commitlint.config.ts"],
  "exclude": ["node_modules"]
}
